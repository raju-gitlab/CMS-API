    <div class="card">
        <div class="card-body">
            <div class="container">
                <div class="row">
                    <div class="col-sm-4">

                        <label>Current Password</label>
                        <div class="form-group">
                            <input type="email" name="CreatedBy" id="exampleInputEmail1" class="form-control" placeholder="Current Password">
                        </div>
                        <label>New Password</label>
                        <div class="form-group pass_show">
                            <input type="password" class="form-control" name="Code" id="Password1" placeholder="New Password">
                        </div>
                        <label>Confirm Password</label>
                        <div class="form-group pass_show">
                            <input type="password" class="form-control" id="Password2" onkeyup="CheckPassword()" placeholder="Confirm Password">
                        </div>
                        <div>
                            <p id="PasswordWarn" style="color:red;visibility:hidden">
                                Password Mast Be Same
                            </p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script>
        $(document).ready(function () {
            $('.pass_show').append('<span class="ptxt">Show</span>');
        });


        $(document).on('click', '.pass_show .ptxt', function () {

            $(this).text($(this).text() == "Show" ? "Hide" : "Show");

            $(this).prev().attr('type', function (index, attr) { return attr == 'password' ? 'text' : 'password'; });

        });
        function myFunction() {
            var x = document.getElementById("exampleInputEmail1").value;
            const arguments = window.location.search;
            var splitparam = arguments.split('=');
            var UID = splitparam[2];
            //var CsheduleId = arguments.get('SchiD');
            document.getElementById("exampleInputEmail1").value = UID;
        }
        function CheckPassword() {
            var pass1 = document.getElementById("Password1").value;
            var pass2 = document.getElementById("Password2").value;
            if (pass1 == pass2) {
                document.getElementById("PasswordWarn").style.visibility = "hidden";
            }
            else {
                document.getElementById("PasswordWarn").style.visibility = "show";
            }
        }
    </script>
