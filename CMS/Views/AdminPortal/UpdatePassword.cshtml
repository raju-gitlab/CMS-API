    <style>
        .pass_show {
            position: relative
        }

            .pass_show .ptxt {
                position: absolute;
                top: 50%;
                right: 10px;
                z-index: 1;
                color: #f36c01;
                margin-top: -10px;
                cursor: pointer;
                transition: .3s ease all;
            }

                .pass_show .ptxt:hover {
                    color: #333333;
                }
    </style>
</head>
<body>
    <div class="card" style="width:30%;position:relative;top:50%;left:50%;transform:translate(-50%,-50%)">
        <div class="card-body">
            <h6 style="text-align:center">KITM</h6>
            <h6 style="text-align:center">Account Recovery</h6>
            @*<p style="text-align: center; font-family: 'Roboto Mono', monospace; ">
                    This helps show that this account really belongs to you
                </p>*@
            <div class="login-box">
                <form method="post" action="UpdatePassword" enctype="multipart/form-data">
                    <div>
                        <div class="container">
                            <div class="row">
                                <div>
                                    <div style="margin-bottom:15px">
                                        <input type="email" name="Value" value="@ViewBag.userId" class="form-control" required readonly style="border-radius:18px" />
                                    </div>
                                    <div class="input-block">

                                        <input type="password" name="Code" id="myText" required spellcheck="false">

                                        <span class="placeholder">
                                            New Password
                                        </span>
                                    </div>
                                    <div class="input-block">
                                        <input type="password" id="myText" required spellcheck="false">
                                        <span class="placeholder">
                                            Re-Type Password
                                        </span>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div style="display:flex;justify-content:space-between;padding:10px">
                            <button type="submit" class="btn btn-sm" style="font-weight: 700; background-color: dodgerblue;color:white; border: none; outline: none; height: 40px; width: 100px; border-radius: 10px;">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
